@using Rapid.SmartReport.Examples.Models
@model Rapid.SmartReport.Core.Report<SalesData>

@{
    ViewData["Title"] = "Advanced Table Report";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Advanced Table Report</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h2>Advanced Sales Report</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <h5>Features Demonstrated:</h5>
                <ul class="mb-0">
                    <li>Sorting by Amount (descending)</li>
                    <li>Pagination (3 items per page)</li>
                    <li>Filtering (products containing "Laptop")</li>
                </ul>
            </div>

            <div class="table-responsive">
                @await Component.InvokeAsync("SmartReport", new { reportData = Model })
            </div>
        </div>
    </div>
</div>
