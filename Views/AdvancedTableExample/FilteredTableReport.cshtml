@using Rapid.SmartReport.Examples.Models
@model Rapid.SmartReport.Core.Report<SalesData>

@{
    ViewData["Title"] = "Filtered Table Report";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Filtered Table Report</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h2>Filtered Sales Report</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <h5>Applied Filters:</h5>
                <ul class="mb-0">
                    <li>Region: "North"</li>
                    <li>Amount: Greater than $1,000</li>
                </ul>
            </div>

            <div class="table-responsive">
                @await Component.InvokeAsync("SmartReport", new { reportData = Model })
            </div>
        </div>
    </div>
</div>
