@{
    ViewData["Title"] = "Report Examples";
}

<div class="text-center">
    <h1 class="display-4">Rapid.SmartReport Examples</h1>
    <p>Choose an example to see different reporting capabilities:</p>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Simple Table Report</h5>
                <p class="card-text">Basic example showing how to create a table report with sales data.</p>
                <a asp-action="SimpleTable" class="btn btn-primary">View Example</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Chart Example</h5>
                <p class="card-text">Example showing how to create charts from your data.</p>
                <a asp-action="ChartExample" class="btn btn-primary">View Example</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Complex Report</h5>
                <p class="card-text">Advanced example combining tables and charts in one report.</p>
                <a asp-action="ComplexReport" class="btn btn-primary">View Example</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h2 class="mb-4">Advanced Table Examples</h2>
    <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Basic Table Report</h5>
                    <p class="card-text">Example of a simple table with sorting by Amount.</p>
                    <a asp-controller="AdvancedTableExample" asp-action="GenerateBasicTableReport" class="btn btn-primary">View Example</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Advanced Table Report</h5>
                    <p class="card-text">Demonstrates sorting, pagination, and filtering capabilities.</p>
                    <a asp-controller="AdvancedTableExample" asp-action="GenerateAdvancedTableReport" class="btn btn-primary">View Example</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Multi-Sort Table</h5>
                    <p class="card-text">Shows sorting functionality by Region in ascending order.</p>
                    <a asp-controller="AdvancedTableExample" asp-action="GenerateMultiSortTableReport" class="btn btn-primary">View Example</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Filtered Table</h5>
                    <p class="card-text">Example of filtering by Region and Amount criteria.</p>
                    <a asp-controller="AdvancedTableExample" asp-action="GenerateFilteredTableReport" class="btn btn-primary">View Example</a>
                </div>
            </div>
        </div>
    </div>
</div>
